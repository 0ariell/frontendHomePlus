{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    //  ðŸ‘‡ baseUrl + paths para que `@/foo` apunte a `src/foo`
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // ðŸ‘‡ para que TypeScript reconozca JSX de React 18+
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },

  // ðŸ‘‡ solo incluÃ­ tu carpeta src; excluÃ­ todo lo demÃ¡s
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "../home-plus-backend"]
}
